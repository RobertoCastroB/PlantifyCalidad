<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPlanta"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="#AEC14D"
    card_view:cardCornerRadius="40dp"
    card_view:cardElevation="8dp"
    card_view:contentPadding="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/rv_ivPlanta"
            android:layout_width="75dp"
            android:layout_height="75dp"
            card_view:cardCornerRadius="50dp"
            android:elevation="8dp"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/ivPlanta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                card_view:srcCompat="@drawable/plant3" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvNombreP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/rv_ivPlanta"
            android:layout_toRightOf="@id/rv_ivPlanta"
            android:fontFamily="@font/bree_serif"
            android:text="Planta 1"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivGota"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@id/tvNombreP"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/rv_ivPlanta"
            android:layout_toRightOf="@id/rv_ivPlanta" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/tvAguaP"
            android:layout_toEndOf="@id/ivGota"
            android:layout_toRightOf="@id/ivGota"
            android:layout_below="@id/tvNombreP"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/bree_serif"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>